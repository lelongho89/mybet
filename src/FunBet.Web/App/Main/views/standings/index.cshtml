<div class="row clearfix" ng-controller="app.views.standings.index as vm">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content">
            <div class="header">
                <h2>
                    @L("Standings")
                </h2>
                <button type="button" class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right" ng-click="vm.refresh();"><i class="material-icons">refresh</i></button>
            </div>
            <div class="body table-responsive">
                <table class="table table-hover table-striped table-match">
                    <tbody>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Points</th>
                        </tr>
                        <tr ng-repeat="item in vm.standings" id="standing_{{item.id}}">
                            <td>{{$index + 1}}</td>
                            <td>
                               {{item.name}}
                            </td>
                            <td>
                                {{item.points}}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>