<div class="row clearfix" ng-controller="app.views.bets.index as vm">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content">
            <div class="header">
                <h2>
                    @L("Bets")
                </h2>
                <ul class="header-dropdown m-r--5">
                    <i class="fa fa-spin fa-spinner" ng-if="isTableLoading"></i>
                    <a href="javascript:void(0);" class="waves-effect <waves-block></waves-block>" ng-click="vm.refresh();"><i class="material-icons">refresh</i> Refresh</a>
                </ul>
            </div>
            <div class="body table-responsive">

                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th>@L("Match")</th>
                            <th>@L("Time")</th>
                            <th>@L("Stadium")</th>
                            <th>@L("Score")</th>
                            <th>@L("Actions")</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in vm.matches">
                            <td>{{$index + 1}}</td>
                            <td>{{item.homeTeam}} - {{item.awayTeam}}</td>
                            <td>{{item.startTime | momentFormat: 'DD/MM/YYYY hh:mm A'}}</td>
                            <td>{{item.stadium}}</td>
                            <td><input matInput  type="number" ng-model="item.homeScore" value="" width="10" /> - <input matInput ng-model="item.awayScore" type="number" value="" width="10" /></td>
                            <td>
                                <button mat-raised-button ng-disabled="!canBet(item)" ng-click="vm.bet(item)"><i class="material-icons">touch_app</i>Bet</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>